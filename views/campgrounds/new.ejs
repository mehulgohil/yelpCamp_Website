<%- include("../partials/header") %>

<div class="container">
	<h1 style="text-align: center;">
		Create new Camp Ground
	</h1>
	<div style="width: 30%; margin: 25px auto;">
		<form action="/campgrounds" method="POST">
			<div class="form-group">
				<input class="form-control" type="text" placeholder="Camp Name" name="name">
			</div>
			<div class="form-group">
				<input class="form-control" type="text" placeholder="Image URL" name="image">
			</div>
			<div class="form-group">
				<input class="form-control" type="number" placeholder="Price per night" name="price" min="100" step="10">
			</div>
			<div class="form-group">
				<input class="form-control" type="text" placeholder="Description" name="desc">
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-primary btn-block">
				Submit
				</button>
			</div>
		</form>
		<a href="/campgrounds">Go Back</a>
	</div>
</div>

<%- include("../partials/footer") %>