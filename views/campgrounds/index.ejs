<%- include("../partials/header") %>

<div class="container">
	<header class="jumbotron">
		<div class="container">
			<h1>
				Welcome To YelpCamps!
			</h1>
			<p>
				View campgrounds from all over INDIA		
			</p>
			<div>
				<a class="btn btn-primary btn-lg" href="/campgrounds/new">Add new campgrounds</a>			
			</div>
		</div>
	</header>
	
	<div>
		<h3>
			Our popular Campgrounds!!!
		</h3>
	</div>
	<div class="row text-center" style="display: flex; flex-wrap: wrap;">
		<% campgrounds.forEach(function(campground){ %>
			<div class="col-md-4 col-sm-6">
				<div class="thumbnail">
					<img src = "<%= campground.image %>">
					<div class="caption">
						<h4>
							<%= campground.name %>
						</h4>	
						<div>
							<a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">Show More</a>
						</div>
					</div>
				</div>
			</div>
		<% }); %>		
	</div>

</div>

<%- include("../partials/footer") %>